<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="com.example.newsappspace.fragments.news_details.NewsDetailsFragment"
        android:label="news_details_fragment"
        tools:layout="@layout/news_details_fragment" >
        <argument
            android:name="singleArticle"
            app:argType="com.example.newsappspace.model.Article" />
    </fragment>
    <fragment
        android:id="@+id/newsScreenFragment"
        android:name="com.example.newsappspace.fragments.news_screen.NewsScreenFragment"
        android:label="news_screen_fragment"
        tools:layout="@layout/news_screen_fragment" >
        <action
            android:id="@+id/action_newsScreenFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFirstFragment"
        android:name="com.example.newsappspace.fragments.onboarding.oboarding1.Onboarding1ExploreFragment"
        android:label="onboarding_first_fragment"
        tools:layout="@layout/onboarding_first_fragment" />
    <fragment
        android:id="@+id/savedScreenFragment"
        android:name="com.example.newsappspace.fragments.saved_screen.SavedScreenFragment"
        android:label="saved_screen_fragment"
        tools:layout="@layout/saved_screen_fragment" >
        <action
            android:id="@+id/action_savedScreenFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchScreenFragment"
        android:name="com.example.newsappspace.fragments.search_screen.SearchScreenFragment"
        android:label="search_screen_fragment"
        tools:layout="@layout/search_screen_fragment" >
        <action
            android:id="@+id/action_searchScreenFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.newsappspace.fragments.splash_screen.SplashScreenFragment"
        android:label="splash_screen_fragment"
        tools:layout="@layout/splash_screen_fragment" >
        <action
            android:id="@+id/action_splashScreenFragment_to_viewpagerHost"
            app:destination="@id/viewpagerHost"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_newsScreenFragment"
            app:destination="@id/newsScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewpagerHost"
        android:name="com.example.newsappspace.fragments.onboarding.onboarding_view_pager.OnboardingViewpagerHost"
        android:label="viewpager_host_fragment"
        tools:layout="@layout/viewpager_host_fragment" >
        <action
            android:id="@+id/action_viewpagerHost_to_newsScreenFragment"
            app:destination="@id/newsScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onboarding2"
        android:name="com.example.newsappspace.fragments.onboarding.onboarding2.Onboarding2SearchFragment"
        android:label="fragment_onboarding2"
        tools:layout="@layout/fragment_onboarding2" />
    <fragment
        android:id="@+id/onboarding3"
        android:name="com.example.newsappspace.fragments.onboarding.onboarding3.Onboarding3SaveRelevantPostsFragment"
        android:label="fragment_onboarding3"
        tools:layout="@layout/fragment_onboarding3" />
</navigation>